<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Resideo Facility</title>
    <style>
    </style>
    <link href="https://fonts.googleapis.com/css?family=Titillium+Web" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" />
    <link href="~/_frameworks/bootstrap-datetimepicker-4.17.45/bootstrap-datetimepicker.min.js" rel="stylesheet" />
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.8/angular-material.min.css">
    <link href="~/Content/css/Site.css" rel="stylesheet" />
    <link rel="SHORTCUT ICON" href="~/favicon.ico" />
    <script src="~/_frameworks/jquery-3.3.1/jquery-3.3.1.min.js"></script>
    <script src="~/_frameworks/moment-2.9.0.js/moment-with-locales.min.js"></script>

    <script src="~/_frameworks/bootstrap-datetimepicker-4.17.45/bootstrap-datetimepicker.min.js"></script>
    <!-- Angular Material requires Angular.js Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular-animate.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular-aria.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular-messages.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular-route.js"></script>

    <!-- Angular Material Library -->
    <script src="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.8/angular-material.min.js"></script>
    <script src="~/_frameworks/bootstrap-4.2.1/js/bootstrap.min.js"></script>
</head>
<div id="msg">Page is loading...</div>
<body ng-app="ResideoApp"  style="    background: scroll;"  >
    
    <div ng-cloak ng-controller="NavigationController" class="navbar navbar-inverse navbar-fixed-top">

        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Content/img/resideo-company-name-logo-black-170-x-39.png" style="
    height: 30px;
    margin-top: 8px;
    margin-right: 10px;
" />
                @*@Html.ActionLink("Resideo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>


            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav mr-auto">
                    <li class="headerlink" style="background-color:red"><a style="color:white" class="headerlinka" href="/#!/">Meeting Room</a></li>
                    <li class="headerlink" style="user-select: none;"><a id="helplink" disabled="disabled">Help&nbsp;<sup style="color:gray">Coming Soon</sup></a> </li>
                    @*<li class="headerlink"><a disabled="disabled">Stationary</a></li>
                    <li class="headerlink"><a disabled="disabled">Help</a></li>*@
                    <li></li>
                </ul>
                <ul id="personalIcon" class=" nav navbar-nav" style="    float: right; margin:0px;padding:0px;
    ">
                    <li style="margin:0px;padding:0px;">
                        <md-menu style="margin:0px;padding:0px;">
                            <md-button  aria-label="Open phone interactions menu" class="md-icon-button" style="width:auto; height:50px;padding:unset; border-radius:unset" ng-click="openMenu($mdMenu, $event)">
                                <div layout="row">
                                    @ViewBag.username
                                    <md-icon style="margin-left:5px" md-menu-origin md-svg-icon="/Content/img/user.svg"></md-icon>
                                </div>
                            </md-button>
                            <md-menu-content width="4">
                                <md-menu-item>
                                    <md-button ng-click="ctrl.redial($event)">
                                        @*<md-icon md-svg-icon="/Content/img/done.svg" md-menu-align-target></md-icon>
                                        @ViewBag.username*@
                                    </md-button>
                                </md-menu-item>

                                <md-menu-item>
                                    <md-button ng-click="ctrl.checkVoicemail()" ng-href="/#!/mybookings">
                                        <md-icon md-svg-icon="/Content/img/bookings.svg" md-menu-align-target></md-icon>
                                        @*<a class="md-primary md-raised" style="display: contents;" href="">*@
                                        My Bookings
                                        </a>
                                    </md-button>
                                </md-menu-item>
                                <md-menu-item>
                                    <md-button ng-click="ctrl.redial($event)" ng-href="/#!/me">
                                        <md-icon md-svg-icon="/Content/img/myprofile.svg" md-menu-align-target></md-icon>
                                        My Profile
                                    </md-button>
                                </md-menu-item>
                                <md-menu-item ng-show="isAdmin">
                                    <md-button ng-click="ctrl.redial($event)" ng-href="/#!/admin">
                                        <md-icon md-svg-icon="/Content/img/control-panel.svg" md-menu-align-target></md-icon>
                                        Admin Control Center
                                    </md-button>
                                </md-menu-item>
                                <md-menu-divider></md-menu-divider>
                                <md-menu-item>
                                    <md-button class="md-hue" href="Home/Logout">
                                        @*<md-icon md-svg-icon="/Content/img/done.svg"></md-icon>*@
                                        Logout
                                    </md-button>
                                </md-menu-item>
                            </md-menu-content>
                        </md-menu>


                    </li>
                    <li> </li>
                    <li>
                        <form></form>
                    </li>
                </ul>

            </div>
        </div>
        <div ng-cloak ng-show="!isVerified" class="overlay">
            <div style="text-align: center;
    margin: 0 auto;
    background-color: white;
    width: 750px;
    height: 120px;
    padding-top: 20px;
    margin-top: 100px;">
                <div style="font-size: 22px;">Your account is not verified yet. Please follow the link sent to your email id.</div>
                <div style="color:green" ng-show="ResetVerificationMail">Account verification link has been sent successfully.</div>
                <md-button class="md-raised md-hue" ng-hide="ResetVerificationMail" ng-disabled="ResetVerificationMailStarted" ng-click="resendVerificationLink()">Resend Verificatiton Link</md-button>
                <md-button style="padding-left:10px" class="md-raised md-hue-2" href="Home/Logout">
                    @*<md-icon md-svg-icon="/Content/img/done.svg"></md-icon>*@
                    Logout
                </md-button>

                <md-progress-linear ng-if="ResetVerificationMailStarted " class="md-warn" md-mode="indeterminate"></md-progress-linear>
            </div>
               
            </div>
        </div>
    </div>
    <div style="padding:0px;" class="container body-content " flex-sm-xs>
        @RenderBody()
        @*<hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Resideo</p>
        </footer>*@
    </div>

    @RenderSection("scripts", required: false)
   


    <script src="~/Scripts/ctrl/RoomController.js"></script>
    <script src="~/Scripts/site.js"></script>


</body>
</html>
